<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.erika.sensorsapplications.MainActivity">

    <EditText
        android:id="@+id/txtAccX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/txtAccY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_below="@+id/txtAccX"
        android:layout_alignStart="@+id/txtAccX" />

    <EditText
        android:id="@+id/txtAccZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_below="@+id/txtAccY"
        android:layout_alignStart="@+id/txtAccY" />

    <TextView
        android:id="@+id/accX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignBaseline="@+id/txtAccX"
        android:layout_alignBottom="@+id/txtAccX"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp" />

    <TextView
        android:id="@+id/accY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:layout_alignBaseline="@+id/txtAccY"
        android:layout_alignBottom="@+id/txtAccY"
        android:layout_alignEnd="@+id/accX" />

    <TextView
        android:id="@+id/accZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtAccZ"
        android:layout_alignBottom="@+id/txtAccZ"
        android:layout_alignEnd="@+id/accY"
        android:text="Z" />

    <TextView
        android:id="@+id/acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Accelerometer" />

    <TextView
        android:id="@+id/ori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Gyroscope" />

    <EditText
        android:id="@+id/txtGyrX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtAccZ"
        android:layout_below="@+id/ori"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/txtGyrY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtGyrX"
        android:layout_below="@+id/txtGyrX"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/txtGyrZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtGyrY"
        android:layout_below="@+id/txtGyrY"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/gyrX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:layout_alignBaseline="@+id/txtGyrX"
        android:layout_alignBottom="@+id/txtGyrX"
        android:layout_alignStart="@+id/accZ" />

    <TextView
        android:id="@+id/gyrY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:layout_alignBaseline="@+id/txtGyrY"
        android:layout_alignBottom="@+id/txtGyrY"
        android:layout_alignEnd="@+id/gyrX" />

    <TextView
        android:id="@+id/gyrZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z"
        android:layout_alignBaseline="@+id/txtGyrZ"
        android:layout_alignBottom="@+id/txtGyrZ"
        android:layout_alignEnd="@+id/gyrY" />

</RelativeLayout>
